@model List<Trip> 
@{
    ViewBag.Title = "My Trip Log";
}

<a asp-controller="Trip"
   asp-action="Page1"
   class="text-primary font-weight-bold">
    Add Trip
</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Destination</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th class="w-40">Accommodations</th>
            <th>Things To Do</th>
            <th class="w-5"></th>
        </tr>
    </thead>
    <tbody>

        @foreach(var trip in Model)
        {
            <tr>
                <td>@trip.Destination</td>
                <td>@trip.StartDate.Date.ToString("MM/dd/yyyy")</td>
                <td>@trip.EndDate.Date.ToString("MM/dd/yyyy")</td>
                <td>
                    @if (@trip.Accommodation != null){<text>
                        @trip.Accommodation<br />
                        Phone:&nbsp;@trip.AccommodationPhone | Email:&nbsp;@trip.AccommodationEmail
                    </text>}
                </td>
                <td>@trip.ThingToDo1<br/>
                    @trip.ThingToDo2<br/>
                    @trip.ThingToDo3
                </td>
                <td>
                    <a asp-controller="Home"
                       asp-action="Delete"
                       asp-route-id="@trip.TripID"
                       class="text-danger font-weight-bold">&times;</a>
                </td>
            </tr>
        }

    </tbody>
</table>

